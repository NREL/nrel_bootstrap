{
    "name": "nrel/nrel_bootstrap",
    "description": "NREL.gov APP branded theme for Bootstrap 3",
    "type": "drupal-theme",
    "license": "GPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "homepage": "https://www.drupal.org/project/bootstrap",
    "authors": [
        {
            "name": "Damon Haley (dhaley)",
            "email": "damon.haley@nrel.gov",
            "role": "Maintainer"
        },
        {
            "name": "Shaun Laws (slaws)",
            "email": "shaun.laws@nrel.gov",
            "role": "Co-maintainer"
        },
        {
            "name": "Christian Modern (cmodern)",
            "email": "christian.modern@nrel.gov",
            "role": "Co-maintainer"
        }

    ],
    "support": {
        "issues": "https://github.com/NREL/nrel_bootstrap/issues"
    },
    "require-dev": {
        "nuvoleweb/drupal-component-scaffold": "*",
        "drupal/console": "~1",
        "drush/drush": "*",
        "drupal/core": "~8"
    },
    "require": {
        "drupal/bootstrap": "~3.13",
        "drupal/bootstrap_layouts": "^5.1"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "packages.drupal.org": false
    },
    "extra": {
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    }
}
