{
    "name": "nrel/nrel_bootstrap",
    "description": "NREL.gov APP branded theme for Bootstrap 3 and 4",
    "type": "drupal-theme",
    "license": "GPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "homepage": "https://github.com/NREL/nrel_bootstrap",
    "authors": [
        {
            "name": "Shaun Laws (slaws)",
            "email": "shaun.laws@nrel.gov",
            "role": "Co-maintainer"
        },
        {
            "name": "Christian Modern (cmodern)",
            "email": "christian.modern@nrel.gov",
            "role": "Co-maintainer"
        }
    ],
    "extra": {
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    },
    "require": {
        "drupal/bootstrap_barrio": "^5",
        "drupal/bootstrap": "~3.13",
        "drupal/bootstrap_layouts": "^5.1"
    },
    "require-dev": {
        "drupal/console": "~1",
        "drush/drush": "*",
        "drupal/core": "~8"
    },
    "repositories": {
        "assets" : {
            "type": "composer",
            "url": "https://asset-packagist.nrel.gov/nrel/drupal8/",
            "options" : {
                "ssl" : {
                    "verify_peer": false,
                    "allow_self_signed": true
                }
            }
        },
        "packagist.org": false,
        "packages.drupal.org": false
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p ../../../../docroot/libraries/bootstrap",
            "cp -R ../../../../vendor/twbs/bootstrap/dist ../../../../docroot/libraries/bootstrap",
            "cp ./favicon.ico ../../../../docroot/"
        ],
        "post-update-cmd": [
            "mkdir -p ../../../../docroot/libraries/bootstrap",
            "cp -R ../../../../vendor/twbs/bootstrap/dist ../../../../docroot/libraries/bootstrap",
            "cp ./favicon.ico ../../../../docroot/"
        ]
    },
    "support": {
        "issues": "https://github.com/NREL/nrel_bootstrap/issues"
    }
}
